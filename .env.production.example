# =============================================================================
# OCRS Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production

# -----------------------------------------------------------------------------
# Email Service (Mailtrap SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=live.smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
SMTP_FROM_EMAIL=noreply@ghagevaibhav.xyz
SMTP_FROM_NAME=OCRS System

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_API_URL=https://ocrs.ghagevaibhav.xyz

# -----------------------------------------------------------------------------
# Monitoring (Grafana)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=ocrs.ghagevaibhav.xyz
